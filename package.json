{
  "name": "university-management-backend",
  "version": "1.0.0",
  "description": "Backend API for University Management System",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server-production.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "build": "echo 'No build step required for this Node.js app'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:admin": "node seedAdmin.js",
    "lint": "echo 'No linting configured'",
    "check-env": "node -e \"console.log('Environment check:', process.env.NODE_ENV || 'not set')\"",
    "troubleshoot": "node troubleshoot.js",
    "test-health": "node test-health.js",
    "fix-env": "node fix-env.js",
    "setup": "npm install && echo 'Setup complete. Copy .env.example to .env and configure your variables.'",
    "docker:build": "docker build -t university-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env university-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "deploy:check": "node -e \"console.log('Deployment Check:'); console.log('- NODE_ENV:', process.env.NODE_ENV); console.log('- PORT:', process.env.PORT); console.log('- MongoDB URI exists:', !!process.env.MONGODB_URI); console.log('- JWT Secret exists:', !!process.env.JWT_SECRET);\"",
    "prod:check": "node check-production.js"
  },
  "keywords": [
    "university",
    "management",
    "education",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
