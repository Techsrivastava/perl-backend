# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/university_management
# For MongoDB Atlas (recommended for production):
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/university_management

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (for OTP - Add these when implementing email service)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# Security Settings
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS=5

# Frontend URL (for CORS in production)
# FRONTEND_URL=https://your-frontend-domain.com
